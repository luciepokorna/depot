<!DOCTYPE html>
<html>
<head>
  <title>Vetešnictví Depot</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store" >
  <div id="banner" >
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatická knihovna" %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart %>
      </div>
      <a href="/">Úvod</a><br />
      <a href="/faq">FAQ</a><br />
      <a href="/news">Novinky</a><br />
      <a href="/contact">Kontaktní údaje</a><br />
    </div>
    <div id="main" >
      <%= yield %>
    </div>
  </div>
</body>
</html>
